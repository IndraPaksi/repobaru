    <!--Main site-->
    <main id="site-main">
        <div class="container">
            
            <div class="box-nav d-flex justify-content">
                <div class="box">
                    <div class="container-1">
                        <form action="/search" method="GET">
                          <input type="search" id="search" name="keyword" placeholder="Cari Disini....." />
                          <input type="submit" value="Cari">



                <% if(role == 'Operator'){ %>
                <a href="http://localhost:3000/api/export/users.xlsx" class="border-shadow">
                    <span class="text-gradient">Export ALL <i class="fa-solid fa-download"></i></span>
                </a>
